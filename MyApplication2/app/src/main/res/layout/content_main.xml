<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context="com.yang.www.myapplication2.MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天气预报" android:layout_alignParentTop="true"/>
    <Button
            android:text="查询"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:id="@+id/button2" android:layout_below="@+id/editText2" android:layout_alignStart="@+id/editText2"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="城市"
            android:ems="10"
            android:layout_marginStart="22dp" android:layout_marginTop="24dp" android:id="@+id/editText2"
            android:layout_below="@+id/textView3" android:layout_alignParentStart="true"/>
    <TextView
            android:text="输入城市名后点击查询"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true" android:layout_marginTop="46dp" android:id="@+id/textView4"/>
    <TextView android:text="请点击查询" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_below="@+id/button2" android:layout_alignParentStart="true"
              android:layout_marginStart="2761dp" android:layout_marginTop="34dp" android:id="@+id/textView5"/>


</RelativeLayout>
